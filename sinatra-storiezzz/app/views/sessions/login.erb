<h2>Login to StorieZZZ</h2>

<form class="pure-form pure-form-aligned" method="POST" action="/sessions">
    <fieldset>
        <div class="pure-control-group">
            <label for="email">Email: </label>
            <input name="email" id="email" type="text">
        </div>
        <div class="pure-control-group">
            <label for="password">Password: </label>
            <input name="password" id="password" type="password">
        </div>
        <div class="pure-controls">
            <button class="pure-button pure-button-primary" type="submit" value="Log In">Submit</button>
        </div>
    </fieldset>
</form>
